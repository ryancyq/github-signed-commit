  "devDependencies": {
    "@tsconfig/recommended": "^1.0.7",
    "@typescript-eslint/eslint-plugin": "^8.1.0",
    "@typescript-eslint/parser": "^8.1.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "fetch-mock": "^11.1.1",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.1.0"
  },
