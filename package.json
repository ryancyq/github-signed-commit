    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "test": "npx jest"
  },
  "homepage": "https://github.com/ryancyq/signed-commit#readme",
  "dependencies": {
    "@actions/core": "^1.10.0",
